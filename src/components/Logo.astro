---
import { Link } from 'accessible-astro-components'
import { Image } from 'astro:assets'
import logoLight from '../assets/img/ecc-logo-horizontal-light.svg'
import logoDark from '../assets/img/ecc-logo-horizontal-dark.svg'

/**
 * Logo Component
 *
 * @description Logo description
 */
interface Props {
  /**
   * Whether to load the image eagerly or lazily
   * @default 'eager'
   */
  loading?: 'eager' | 'lazy'
}

const { loading = 'eager' }: Props = Astro.props
---

<Link href="/" class="flex items-center gap-2">
  <div class="block dark:hidden">
    <Image src={logoLight} alt="Edinburgh Climate Coalition" width="120" height="60" loading={loading} />
  </div>
  <div class="hidden dark:block">
    <Image src={logoDark} alt="Edinburgh Climate Coalition" width="120" height="60" loading={loading} />
  </div>
</Link>
